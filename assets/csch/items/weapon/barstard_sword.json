{
    "model":{
        "type": "select",
        "property": "display_context",
        "cases": [
            {
                "model": {
                    "type": "model",
                    "model": "csch:weapon/barstard_sword/icon"
                },
                "when": "gui"
            }
        ],
        "fallback": {
            "type": "select",
            "property": "custom_model_data",
            "cases": [
                {
                    "model": {"type": "model", "model": "csch:weapon/barstard_sword/slash"},
                    "when": "slash"
                },
                {
                    "model": {"type": "model", "model": "csch:weapon/barstard_sword/thrust"},
                    "when": "thrust"
                },
                {
                    "model": {"type": "model", "model": "csch:weapon/barstard_sword/hammer"},
                    "when": "hammer"
                },
                {
                    "model": {"type": "model","model": "csch:weapon/barstard_sword/icon"},
                    "when": ""
                }
            ],
            "fallback":{"type": "model", "model": "csch:weapon/barstard_sword"}
        }
        
    }
}