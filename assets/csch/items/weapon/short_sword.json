{
    "model":{
        "type": "select",
        "property": "display_context",
        "cases": [
            {
                "model": {
                    "type": "model",
                    "model": "csch:weapon/short_sword/icon"
                },
                "when": "gui"
            }
        ],
        "fallback": 
        {
            "type": "select",
            "property": "custom_model_data",
            "cases": [
                {
                    "model": {"type": "model", "model": "csch:weapon/short_sword/standard"},
                    "when": "standard"
                },
                {
                    "model": {"type": "model", "model": "csch:weapon/short_sword/reverse"},
                    "when": "reverse"
                }
            ],
            "fallback":{"type": "model", "model": "csch:weapon/short_sword"}
        }
    }
}